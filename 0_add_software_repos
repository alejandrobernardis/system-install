#!/bin/bash
# currently using:

# needed as curl no longer comes installed
sudo apt update
sudo apt install curl


echo "numix icon themes"
sudo add-apt-repository ppa:numix/ppa -n -y

echo "Stellarium"
sudo add-apt-repository ppa:stellarium/stellarium-releases -n -y

echo "Ulauncher"
sudo add-apt-repository ppa:agornostal/ulauncher -n -y

echo "syncthing"
curl -s https://syncthing.net/release-key.txt | sudo apt-key add -
echo "deb http://apt.syncthing.net/ syncthing release" | sudo tee /etc/apt/sources.list.d/syncthing.list
