# basic tools to be able to change colors
sudo apt install libusb-dev libusb-1.0-0-dev
sudo npm install msi-keyboard-cli -g

# keyboard_mon dependencies
pip3 install psutil

echo "IMPORTANT! Manual steps:"
echo "1) Edit the sudoers file with sudo visudo, add:"
echo "fisa ALL=NOPASSWD: /home/fisa/devel/keyboard_mon/km.py"
echo "2) Add to startup applications:"
echo "sudo /home/fisa/devel/keyboard_mon/km.py"
